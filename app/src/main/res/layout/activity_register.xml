<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginRegister.Register"
    android:background="@drawable/back">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="21dp"
        android:text="Join Ana Win"
        android:textAlignment="center"
        android:textColor="@color/y"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:text="We will help you find  place for your needs"
        android:textColor="@color/md_grey_500"
        android:textSize="15dp"
        android:textStyle="bold" />
    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="220dp"
        android:padding="20dp">
        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"

            android:layout_height="50dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/edittext"
            android:hint="Full Name"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:textColor="@android:color/tab_indicator_text"
            android:textColorHint="@color/md_grey_500" />
        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/edittext"

            android:hint="E-mail adress"
            android:padding="10dp"
            android:textColor="@android:color/tab_indicator_text"
            android:textColorHint="@color/md_grey_500"  />
        <EditText
        android:id="@+id/pass"
        android:layout_width="match_parent"
            android:layout_height="50dp"
        android:layout_marginTop="18dp"
            android:background="@drawable/edittext"

            android:hint="Password"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColor="@android:color/tab_indicator_text"
            android:textColorHint="@color/md_grey_500"  />

        <EditText
            android:id="@+id/confir"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/edittext"
            android:hint="Confirm password"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColor="@android:color/tab_indicator_text"
            android:textColorHint="@color/md_grey_500"  />


    </LinearLayout>

    <com.jackandphantom.customtogglebutton.CustomToggle
        android:id="@+id/gender"
        android:layout_width="200dp"
        android:layout_height="67dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="121dp"
        app:ctg_addAnimationTime="400"
        app:ctg_addAnimationType="jack_animation"
        app:ctg_addLeftIcon="@drawable/man"
        app:ctg_addRightIcon="@drawable/woman"
        app:ctg_addSlideBackgroundColor="@color/mapbox_navigation_view_color_banner_secondary_text_dark"
        app:ctg_addSlideColor="@color/y" />


    <Button
        android:id="@+id/log"
        android:layout_width="330dp"

        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="29dp"
        android:background="@drawable/bg_rectangle_edittext"
        android:text="Next"
        android:textColor="#FFF" />



    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-220dp"
        android:text="Sexe"
        android:textSize="15dp"/>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="91dp"
        android:layout_marginStart="103dp"
        android:text="Male" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textView8"
        android:layout_marginEnd="99dp"
        android:text="Female" />


</RelativeLayout>